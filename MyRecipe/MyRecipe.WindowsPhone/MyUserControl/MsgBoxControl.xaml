<UserControl x:Class="MyRecipe.MyUserControl.MsgBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="21"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <StackPanel Width="220" Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="180" Height="180" Source="/Img/UserContro.png"  ></Image>
            <TextBlock x:Name="TBMessage" TextAlignment="Center" TextWrapping="Wrap" Foreground="Gray" FontSize="30" HorizontalAlignment="Center"  ></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>