<Page
    x:Class="MyRecipe.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyRecipe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:MyRecipe.MyUserControl"
    
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <ControlTemplate x:Key="ButtonControlTemplate2" TargetType="Button">
                        <Border x:Name="ButtonBackground" CornerRadius="10"  Width="48" Height="48" >
                            <Border.Background>
                                <ImageBrush Stretch="Fill" ImageSource="/ico/search.png"/>
                            </Border.Background>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0:0:1" To="Pressed">
                                            <VisualTransition.GeneratedEasingFunction>
                                                <CircleEase EasingMode="EaseOut"/>
                                            </VisualTransition.GeneratedEasingFunction>
                                        </VisualTransition>
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver"/>
                                    <VisualState x:Name="Pressed"/>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                        </Border>
                    </ControlTemplate>
                    <ImageBrush x:Key="BackgroundImageBrush" ImageSource="Assets/bg1.jpg"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <ImageBrush x:Key="HubBackgroundImageBrush" ImageSource="{x:Null}"/>
                </ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>
            <DataTemplate x:Key="CookItemTemplate">
                <Grid Margin="0,10" Background="LightYellow" Width="480">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}" Margin="9.5,9.5" Grid.Column="0" HorizontalAlignment="Left">
                        <Image Source="{Binding images}" Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}" Height="179" Width="125"/>
                    </Border>
                    <StackPanel Grid.Column="1" Margin="10.5,0,0,0">
                        <TextBlock Text="{Binding name}" TextWrapping="Wrap" Style="{ThemeResource ListViewItemTextBlockStyle}" Foreground="SaddleBrown"/>
                        <TextBlock Height="40" Text="{Binding keywords}" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Style="{ThemeResource ListViewItemContentTextBlockStyle}"  Foreground="Tan"/>
                        <TextBlock Height="57" Text="{Binding description}" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"  Foreground="Tan"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource BackgroundImageBrush}">
        <Pivot>
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Foreground="LightYellow" FontSize="26.667"/>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <Pivot.Title>
                <Grid Height="84">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="Img/Header.png"></Image>
                    <TextBlock Margin="5,0" Grid.Column="1" FontSize="32" Foreground="LightYellow" VerticalAlignment="Center">天天食疗</TextBlock>

                </Grid>
            </Pivot.Title>
            <PivotItem Header="食疗菜谱">
                <ListView
                        ItemsSource="{Binding SectionCategory, Mode=OneWay}"
                        IsItemClickEnabled="True"
                        >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <uc:ItemControl></uc:ItemControl>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="推荐菜谱" Margin="10">
                <ListView x:ConnectionId='3'
                    ItemsSource="{Binding SectionPopular, Mode=OneWay}"
                                                  
                    ItemTemplate="{StaticResource CookItemTemplate}"
                    SelectionMode="Single"
                    IsItemClickEnabled="True">
                </ListView>
            </PivotItem>
            <PivotItem Header="查询">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border x:Name="BD_TBFrame" VerticalAlignment="Top" BorderThickness="1" Height="72" BorderBrush="{StaticResource PhoneForegroundBrush}" CornerRadius="36">
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:ConnectionId='2' x:Name="TBMainSearch" Text="{Binding Keywords,Mode=TwoWay}"
                                     HorizontalAlignment="Left"
						             Width="249"  Margin="5,0" Background="Transparent" BorderThickness="0"
						                                            
						             Foreground="{StaticResource PhoneForegroundBrush}"                              VerticalAlignment="Center"/>
                                <Button x:Name="BTNSearch" Command="{Binding GoSearchCommand}" Content="Button"  HorizontalAlignment="Right"  VerticalAlignment="Center" BorderBrush="{x:Null}" Template="{StaticResource ButtonControlTemplate2}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <ListView x:ConnectionId='1' Grid.Row="1"
                        ItemsSource="{Binding SectionSearch, Mode=OneWay}"
                        IsItemClickEnabled="True"
                                                 ItemTemplate="{StaticResource CookItemTemplate}"

                                                        
                        >
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>

</Page>

