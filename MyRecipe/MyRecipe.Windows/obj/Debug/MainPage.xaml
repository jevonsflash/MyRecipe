<Page
    x:Class="MyRecipe.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyRecipe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:MyRecipe.MyUserControl"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <ImageBrush x:Key="BackgroundImageBrush" ImageSource="Assets/bg1.jpg"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <ImageBrush x:Key="HubBackgroundImageBrush" ImageSource="{x:Null}"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <DataTemplate x:Key="HubSectionHeaderTemplate">
                <TextBlock Margin="0,0,0,-9.5"  Text="{Binding Title}" FontSize="48"/>
            </DataTemplate>

        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource BackgroundImageBrush}">
        <Hub Header="d" HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
            <HubSection Header="{Binding Title, Mode=OneWay}">
                <DataTemplate>
                    <ListView
                    x:Name="HubSection1" 
                        ItemsSource="{Binding SectionCategory, Mode=OneWay}"
                        IsItemClickEnabled="True"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <uc:ItemControl BorderThickness="0,20"></uc:ItemControl>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>
            <HubSection>
                <DataTemplate>
                    <ListView
                    x:Name="HubSection2"
                        ItemsSource="{Binding SectionPopular, Mode=OneWay}"
                        IsItemClickEnabled="True"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,27.5">
                                    <TextBlock Text="{Binding name,Mode=OneWay}" Style="{ThemeResource ListViewItemTextBlockStyle}" />
                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>
            <HubSection>
                <DataTemplate>
                    <ListView
                    x:Name="HubSection3"
                        ItemsSource="{Binding SectionLatest, Mode=OneWay}"
                        IsItemClickEnabled="True"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

        </Hub>
    </Grid>

</Page>

